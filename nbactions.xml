<?xml version="1.0" encoding="UTF-8"?>
<actions>
  <action>
    <actionName>run</actionName>
    <goals>
      <goal>clean</goal>
      <goal>package</goal>
      <goal>antrun:run</goal>
      <goal>-o</goal>
    </goals>
  </action>
  <action>
    <actionName>debug</actionName>
    <goals>
      <goal>clean</goal>
      <goal>package</goal>
      <goal>antrun:run</goal>
      <goal>-o</goal>
    </goals>
    <properties>
      <vm.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</vm.args>
      <jpda.listen>true</jpda.listen>
    </properties>
  </action>
  <action>
    <actionName>profile</actionName>
    <goals>
      <goal>clean</goal>
      <goal>package</goal>
      <goal>antrun:run</goal>
      <goal>-o</goal>
    </goals>
    <properties>
      <vm.args>${profiler.args}</vm.args>
      <!-- XXX <java jvm="${profiler.java}" ...> -->
      <profiler.action>profile</profiler.action>
    </properties>
  </action>
  <action>
    <actionName>CUSTOM-versions:use-latest-versions</actionName>
    <displayName>versions:use-latest-versions</displayName>
    <goals>
      <goal>versions:use-latest-versions</goal>
    </goals>
  </action>
  <action>
    <actionName>CUSTOM-update dependency versions</actionName>
    <displayName>update dependency versions</displayName>
    <goals>
      <goal>versions:use-latest-versions</goal>
    </goals>
    <properties>
      <allowSnapshots>true</allowSnapshots>
    </properties>
  </action>
</actions>
